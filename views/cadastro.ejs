<!doctype html>
<head>
    <%- include('./partials/head'); %>
    <title>Cadastre-se</title>
    <link rel="stylesheet" type="text/css" href="/static/cadastro.css">
</head>
<body>
    <div class="container">
        <!--espaçamento inicial/final-->
        <div class="row">
            <div class="col-md-12">
                <div class="espaco"></div>
            </div>
        </div>
         <!--fim espaçamento inicial/final-->

        <div class="area-cadastro">
            <div class="row">
                <form action="/cadastro-realizado" method="POST">
                    <div class="col-md-12">
                            <h5>Cadastre-se</h5>
                                <input class="input-text-cadastro1" type="text" name="nome" placeholder="Nome">    
                                <input class="input-text-cadastro1" type="text" name="sobrenome" placeholder="Sobrenome">
                    </div>
                    <div class="col-md-12">
                            <input class="input-text-cadastro2" type="text" name="email" placeholder="Email">       
                    </div>
                    <div class="col-md-12">
                        <input class="input-text-cadastro1" type="text" name="estado" placeholder="Estado">
                        <input class="input-text-cadastro1" type="text" name="cidade" placeholder="Cidade">       
                    </div>
                    <div class="col-md-12">
                        <input class="input-text-cadastro2" type="password" name="senha" placeholder="Senha">
                    </div>
                    <div class="col-md-12">
                        <input class="input-text-cadastro2" type="password" name="confsenha" placeholder="Confirmar Senha">
                    </div>
                    <div class="col-md-6">
                        <input type="checkbox" id="termos">
                        <label class="termosdeuso" for="termos">Declaro que li e concordo com os <a href="https://www.google.com/">Termos de Uso</a> e <a href="https://www.google.com/">Políticas de Privacidade</a></label>
                    </div>
                    <div class="col-md-12">
                        <button class="botaocriarconta" type="submit">Criar Conta</button>
                    </div>
                </form>
            </div>
        </div>
         <!--espaçamento inicial/final-->
        <div class="row">
            <div class="col-md-12">
                <div class="espaco"></div>
            </div>
        </div>
         <!--fim espaçamento inicial/final-->
    </div>
<script src="https://code.jquery.com/jquery-2.1.3.min.js"></script>
<script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js"></script>
</body>
</html>
