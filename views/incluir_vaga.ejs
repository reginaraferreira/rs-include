<!doctype html>
<head>
    <%- include('./partials/head'); %>
    <title>Criar Pagina</title>
	<link rel="stylesheet" type="text/css" href="/static/feed.css">
    <link rel="stylesheet" type="text/css" href="/static/criar_pagina.css">
</head>
<body>
	<%- include('./partials/menu'); %>
    <div class="body-feed">
    	<div class="row-feed">
        	<div class="col-md-3-side-left"> <!--INICIO MENU ESQUERDO-->
				<p class="nome-pages-menu">Cadastrar Vaga</p>
            </div><!--FIM MENU ESQUERDO-->
           
			<div class="col-md-6-feed"> <!--INICIO FEED-->
				<div class="head-feed">
					<div class="pages-updates-zone">
						<div class="area-cadastro">
							<div class="info-basica-page">
								<div class="row">
					<form action="/CadastroVaga-realizado" method="post">
									<div class="col-md-12">
									</div>
								</div>
				
								<div class="menu-info-basica">
									<div class="row-tipo-pagina">
										<div class="col-md-12">
											<p>Título da Vaga: </p>
											<input class="info-page-edit" type="text" name="titulo" value= "" >
										</div>
									</div>
									<div class="row-tipo-pagina">
										<div class="col-md-12">
											<p>Descrição: </p>
											<textarea class="info-page-edit" type="text" name="descricao" value= ""></textarea>
										</div>
									</div>
									<div class="row-tipo-pagina">
										<div class="col-md-12">
											<p>Requisitos da vaga: </p>
											<textarea class="info-page-edit" type="text" name="requisitos" value= ""></textarea>
										</div>
									</div>
									<div class="row-tipo-pagina">
										<div class="col-md-12">
											<p>Benefícios oferecidos: </p>
											<textarea class="info-page-edit" type="text" name="beneficios" value= ""></textarea>
										</div>
									</div>
								</div>
							</div>
						</div>
						<div class="menu-about-page">
										<div class="row-select">
											<div class="col-md-4">
												<p class="nome-select-page">Salário oferecido: </p>
											</div>
											<div class="col-md-8">
												<input class="info-page-edit" type="text" name="salario" value= "" >
											</div>
										</div>
										<div class="row-select">
											<div class="col-md-12">
												<p class="nome-select-page">Local de atuação:</p>
											</div>
										</div>
										<div class="row-select">
											
											<div class="col-md-2">
												<p class="nome-select-page">Estado: </p>
											</div>
											<div class="col-md-4">
                                				<select class="info-page-edit" id="uf" name="estado">
                                    				<option></option>
                                				</select>
											</div>
											<div class="col-md-2">
												<p class="nome-select-page">Cidade: </p>
											</div>
											<div class="col-md-4">
												<select class="info-page-edit" id="cidade" name="cidade">
													<option></option>
												</select>
											</div>
										</div>
						</div>	
						<div class="row">
							<div class="col-md-6-botoes">
								<a href="http://localhost:8080/minhas_paginas">
									<input class="btn-questionario" value="Incluir Questionário">
								</a>
							</div>
						</div>
						<div class="row">
							<div class="col-md-6-botoes">
								<input class="botaoredefinir" type="submit" value="Salvar">
							</div>
					</form>
						<div class="col-md-6-botoes">
							<!--<form action="/logoff" method="post">  -->
							<a href="http://localhost:8080/minhas_paginas">
								<input class="botaovoltar" type="button" value="Voltar">
							</a>
							<!--</form>-->
						</div>




					</div>
				</div>
        	</div> <!--FIM FEED-->
        <div class="col-md-3-side-right"> <!--INICIO MENU DIREITO--></div>
    </div>
<script src="https://code.jquery.com/jquery-2.1.3.min.js"></script>
<script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js"></script>
<script src="/scripts/select_estados_cidades.js"></script>
</body>
</html>